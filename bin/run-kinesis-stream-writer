if [ "$SPARK_SQL_KINESIS" == "" ]; then
  if [ -e ../bin/${0##*/} ]; then
    SPARK_SQL_KINESIS=".."
  elif [ -e ./bin/${0##*/} ]; then
    SPARK_SQL_KINESIS="."
  else
    echo "env SPARK_SQL_KINESIS not defined"
    exit 1
  fi
fi

_SPARK_VERSION=`grep "<spark.version>" "${SPARK_SQL_KINESIS}/pom.xml" | head -n1 | awk -F '[<>]' '{print $3}'`
_SCALA_VERSION=`grep "<scala.binary.version>" "${SPARK_SQL_KINESIS}/pom.xml" | head -n1 | awk -F '[<>]' '{print $3}'`
_JAR_FILE="kinesis-stream-writer_${_SCALA_VERSION}-${_SPARK_VERSION}"

_MAIN_CLASS="org.apache.spark.examples.streaming.KinesisStreamWriter"

_BUILT_JAR="$SPARK_SQL_KINESIS/target/${_JAR_FILE}-SNAPSHOT-with-dependencies.jar"
if [ -e $_BUILT_JAR ]; then
  _JAR=$_BUILT_JAR
else
  _JAR="$SPARK_SQL_KINESIS/assembly/${_JAR_FILE}.jar"
  echo "${_BUILT_JAR} not found, so use ${_JAR}"
fi

# Last, launch stream writers in the jar
scala ${_SCALA_OPTS} -classpath $_JAR $_MAIN_CLASS "$@"

